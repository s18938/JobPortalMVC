@model JobPortalMVC.Models.Candidate

@{
    ViewData["Title"] = "Details";
}

<h1>Mój profil</h1>

<div>
    <h4>Kandydat</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Imie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Nazwisko
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
           Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
           Tel
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelNum)
        </dd>
        <dt class = "col-sm-2">
            Adres
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CityCity.CityName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CandidateId">Edit</a> 
    
</div>
