@model JobPortalMVC.Models.Joboffercandidate

@{
    ViewData["Title"] = "EditState";
}

<h1>Zmień status</h1>

<h4>Aplikacja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobOfferCandidateId" />
            <div hidden class="form-group">
                <label asp-for="JobOfferJobOfferId" class="control-label"></label>
                <select asp-for="JobOfferJobOfferId" class="form-control" asp-items="ViewBag.JobOfferJobOfferId"></select>
                <span asp-validation-for="JobOfferJobOfferId" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="CandidateCandidateId" class="control-label"></label>
                <select asp-for="CandidateCandidateId" class="form-control" asp-items="ViewBag.CandidateCandidateId"></select>
                <span asp-validation-for="CandidateCandidateId" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="AddDate" class="control-label"></label>
                <input asp-for="AddDate" class="form-control" />
                <span asp-validation-for="AddDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobApliacationStateJobApliacationStateId" class="control-label">Status aplikacji</label>
                <select asp-for="JobApliacationStateJobApliacationStateId" class="form-control" asp-items="ViewBag.JobApliacationStateJobApliacationStateId"></select>
                <span asp-validation-for="JobApliacationStateJobApliacationStateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a type="button" class="btn btn-light" asp-controller="JobOffers" asp-action="MyCandidates" asp-route-id="@Model.CandidateCandidateId">
        Wróć
    </a>
</div>