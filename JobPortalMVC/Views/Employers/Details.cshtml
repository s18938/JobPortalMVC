@model JobPortalMVC.Models.Employer

@{
    ViewData["Title"] = "Details";
}
@{
    var base64 = Convert.ToBase64String(Model.Logo);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}
<h1>Mój profil</h1>

<div>
    <h4>Pracodawca</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Logo
        </dt>
        <dd class="col-sm-10">
            <img src="@imgSrc" />
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
           Liczba pracowników
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeesNumber)
        </dd>
        <dt class="col-sm-2">
           Strona internetowa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Page)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EmployerId">Edytuj</a>
</div>